#!/usr/bin/env bash
set -eo pipefail; [[ -n "$PLUSHU_TRACE" ]] && set -x

cat <<"EOF"
export MONGODB_URI=mongodb://$ADDON_MONGODB_LINK_PORT_27017_TCP_ADDR:$ADDON_MONGODB_LINK_PORT_27017_TCP_PORT
export MONGODB_URL=mongodb://$ADDON_MONGODB_LINK_PORT_27017_TCP_ADDR:$ADDON_MONGODB_LINK_PORT_27017_TCP_PORT
export MONGODB_HOST=$ADDON_MONGODB_LINK_PORT_27017_TCP_ADDR
export MONGODB_PORT=$ADDON_MONGODB_LINK_PORT_27017_TCP_PORT
EOF
